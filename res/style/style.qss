* {
    font-family: "KaiTi";
}

QWidget{
    /*background-color: rgb(255, 255, 255);*/
    background-color:	#F0F8FF;
    /* background-color:#EDEDED;登陆界面密码背景*/

}

QWidget:focus{
    outline: none;
}

QPushButton[class="Aqua"] {
    border-radius: 4px;
    height: 30px;
    background-color: 	#4169E1;
}

QPushButton:hover[class="Aqua"] {
    background-color: #4169E1;
}

QPushButton:pressed[class="Aqua"] {
    background: qradialgradient(cx:0.5,
    cy: 0.5,
    fx: 0.5,
    fy: 0.5,
    radius: 1.5,
    stop: 0.2 	#FFFFFF,
    stop: 0.8 		#FFFFFF);
}

QLineEdit {
    border: 1px solid 	#0000A8;
    border-radius: 4px;
    font-size: 12px;
    padding: 5px 8px;
    selection-background-color: lightgray;
}

QLineEdit:focus {
    border: 1px solid 	#FF4500;
}

/*QComboBox下拉框*/
QComboBox {
    border: 1px solid #0000A8;
    border-radius: 4px;
    font-size: 12px;
    padding: 3px 5px;
}

QComboBox::drop-down {
    background-color: transparent;
}

QComboBox::down-arrow {
    image: url(./res/style/img/more.png);
    padding-right: 10px;
    padding-top: 2px;
}

QComboBox::!editable:on {
    border: 1px solid #0000A8;
}

QComboBox QAbstractItemView{
    border: 2px solid 	#0000A8;
    outline: none;
}

QComboBox QAbstractItemView::item{
    height: 30px;
    border-bottom: 1px solid #0000A8;
}

QComboBox QAbstractItemView::item:hover{
    background-color: #FF0000;
    color: #FFFF74;
}

QComboBox QAbstractItemView::item:selected{
    background-color: #FF0000;
    color: #FFFF74;
}

/*QListWidget,QListView*/
QListWidget,QListView {
    font: 14pt;
    border: 1px solid #FFFFFF;
    outline: none;
    padding: 0;
}

QListWidget::item,QListView::item {
    height: 45px;
    padding-left: 5px;
    border-bottom: 1px solid #FFFFFF;
    font-size:20px;
}

QListWidget::item:hover,QListView::item:hover{
    background-color: #FFFFFF;
    color: #000000;
}

QListWidget::item:selected,QListView::item:selected{
    background-color: #FFFFFF;
    color: #000000;
}

/*QTableWidget,QTableView*/
QHeaderView{
    height: 40px;
    border: 0 solid rgba(255, 255, 255, 0);
    background-color: #fff;
    border-bottom: 2px solid #e6e9ed;
}

QHeaderView::section{
    height: 40px;
    border: 0 solid rgba(255, 255, 255, 0);
    background-color:#6AAAFD;
    outline: none;
}

QTableWidget,QTableView{
    border: 1px solid #ccd1d9;
    alternate-background-color: #f1f2f6;
    /*background-color: #fff;*/
    background-color:	#F0F8FF;
    selection-background-color : #99CCFF;
    font-size:16px;
}

/*QTabWidget*/
QTabWidget{
    border:1px solid #ccd1d9;
    font-size:16px;
}

QTabWidget::pane { /* The tab widget frame */
    border: none;
    background-color: #FFFFFF;
    border-radius: 3px;
    border-top-left-radius: 0;
}

QTabBar::tab {
    padding: 8px 30px;
    background-color: #FFFFFF;
}

QTabBar::tab:first {
    border-top-left-radius: 3px;
}

QTabBar::tab:!selected {
    border-left: 1px solid #FFFFFF;
    background-color: #00008B;
    color:#FFFFFF;
}

